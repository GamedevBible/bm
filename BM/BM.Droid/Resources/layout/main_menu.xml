<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_blue_down_up"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:id="@+id/newGameLayout"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/newGameImage"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/Icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/newGameText"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"
                android:text="Новая игра"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:id="@+id/infoLayout"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/infoImage"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/Icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/infoText"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"
                android:text="Справка"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="64dp"
            android:id="@+id/contactsLayout"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/contactsImage"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:src="@drawable/Icon"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/contactsText"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"
                android:text="Контакты"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
