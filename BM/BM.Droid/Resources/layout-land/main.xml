<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="horizontal"
    android:background="@drawable/gradient_blue_down_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_above="@+id/buttonsLayout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center_vertical|right"
            android:background="@color/transparent"
            android:src="@drawable/logoBible"/>
        <android.support.v7.widget.AppCompatImageButton
          android:background="?attr/selectableItemBackground"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_marginLeft="30dp"
          android:id="@+id/soundButton"
          android:layout_gravity="right|bottom"
          style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
          app:srcCompat="@drawable/volume_high"
          android:layout_margin="10dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/buttonsLayout">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Начать игру"
            android:id="@+id/startButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Мои рекорды"
            android:id="@+id/recordsButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дополнительно"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/contactsButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:ems="18" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:text="Другие наши игры"
            android:id="@+id/guideButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/light_brown_color"
            android:ems="18" />
    </LinearLayout>
</LinearLayout>
