<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_blue_down_up"
  android:orientation="vertical">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_above="@+id/bottomLayout"
  android:fillViewport="true" >
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:maxLines="1"
        android:gravity="center"
        android:id="@+id/appVersion"
        android:text="Версия"/>
    <TextView
      android:layout_below="@+id/appVersion"
        android:layout_width="wrap_content"
        android:ems="30"
        android:layout_height="42sp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:maxLines="20"
        android:gravity="center"
        android:id="@+id/lessons"
        android:padding="10dp"
        android:text="Версия"
        android:background="@drawable/rounded_corners"/>
    <TextView
        android:layout_below="@+id/lessons"
        android:layout_width="wrap_content"
        android:ems="30"
        android:layout_height="77sp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:gravity="center"
        android:id="@+id/contactUs"
        android:padding="10dp"
        android:text="Дизайн и разработка с любовью :)"
        android:background="@drawable/rounded_corners"/>
    <TextView
        android:layout_below="@+id/contactUs"
        android:layout_width="wrap_content"
        android:ems="30"
        android:layout_height="47sp"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:gravity="center"
        android:id="@+id/supportUs"
        android:padding="10dp"
        android:text="Поддержать нас :)"
        android:background="@drawable/rounded_corners"/>
  </RelativeLayout>
</ScrollView>
  <RelativeLayout
    android:id="@+id/bottomLayout"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/historiesButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/book_open_page_variant"
            android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/bottomView"/>
    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/bottomView"
      />
    <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/thanksButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/thumb_up_outline"
            android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/bottomView"
            />
  </RelativeLayout>
  </RelativeLayout>