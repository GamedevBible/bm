<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_blue_down_up"
  android:orientation="vertical">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_above="@+id/bottomLayout"
  android:fillViewport="true" >
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <View
      android:layout_width="match_parent"
      android:id="@+id/separator0"
      android:layout_marginTop="10dp"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:maxLines="1"
        android:layout_below="@+id/separator0"
        android:gravity="center"
        android:id="@+id/appVersion"
        android:text="Версия"/>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/appVersion"
      android:id="@+id/separator1"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="5dp"
      android:paddingBottom="5dp"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
      android:clickable="true"
      android:id="@+id/lessonsLayout"
      android:layout_centerHorizontal="true"
      android:layout_below="@+id/separator1">
      <TextView
          android:layout_width="match_parent"
          android:ems="30"
          android:clickable="false"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:layout_centerHorizontal="true"
          android:maxLines="20"
          android:gravity="center"
          android:id="@+id/lessons"
          android:padding="10dp"
          android:textColor="@color/dark_gray"
          android:text="Версия"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/lessonsLayout"
      android:id="@+id/separator2"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_below="@+id/separator2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="5dp"
                 android:paddingBottom="5dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
      android:id="@+id/contactUsLayout"
          android:layout_centerVertical="true">
      <TextView
          android:layout_below="@+id/lessons"
          android:layout_width="match_parent"
          android:ems="30"
          android:clickable="false"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/dark_gray"
          android:layout_centerHorizontal="true"
          android:maxLines="20"
          android:scrollbars="vertical"
          android:gravity="center"
          android:id="@+id/contactUs"
          android:padding="10dp"
          android:text="Дизайн и разработка с любовью :)"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/contactUsLayout"
      android:id="@+id/separator3"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_below="@+id/separator3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="-5dp"
      android:layout_marginStart="-5dp"
      android:layout_marginRight="-5dp"
      android:layout_marginEnd="-5dp"
      android:paddingTop="5dp"
                 android:paddingBottom="5dp"
      android:layout_centerHorizontal="true"
      android:gravity="center"
      android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
      android:id="@+id/supportUsLayout"
          android:layout_centerVertical="true">
      <TextView
          android:layout_below="@+id/contactUs"
          android:layout_width="match_parent"
          android:ems="30"
          android:clickable="false"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/dark_gray"
          android:layout_centerHorizontal="true"
          android:maxLines="20"
          android:scrollbars="vertical"
          android:gravity="center"
          android:id="@+id/supportUs"
          android:padding="10dp"
          android:text="Поддержать нас :)"/>
    </FrameLayout>
    <View
      android:layout_width="match_parent"
      android:layout_below="@+id/supportUsLayout"
      android:id="@+id/separator4"
      android:layout_height="1dp"
      android:background="@color/lighter_gray"/>
  </RelativeLayout>
</ScrollView>
  <RelativeLayout
    android:id="@+id/bottomLayout"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/historiesButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/book_open_page_variant"
            android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
            android:layout_toLeftOf="@+id/bottomView"/>
    <View
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_centerHorizontal="true"
      android:id="@+id/bottomView"
      />
    <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/thanksButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/thumb_up_outline"
            android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/bottomView"
            />
  </RelativeLayout>
  </RelativeLayout>