<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@drawable/gradient_blue_down_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/helpButtonsLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/backButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/chevron_double_left"
            android:layout_weight="1"
            android:layout_centerVertical="true"/>
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/callButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/phone_in_talk"
            android:layout_weight="1"
            android:layout_centerVertical="true"/>
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/peopleButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/account_multiple"
            android:layout_weight="1"
            android:layout_centerVertical="true"/>
      <android.support.v7.widget.AppCompatImageButton
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/fiftyButton"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            app:srcCompat="@drawable/format_list_checks"
            android:layout_weight="1"
            android:layout_centerVertical="true"/>
    </LinearLayout>
    <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_below="@+id/helpButtonsLayout"
          android:orientation="horizontal">
          <FrameLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1">
              <TextView
                  android:layout_width="wrap_content"
                  android:ems="20"
                  android:layout_height="127sp"
                  android:textSize="17sp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginStart="10dp"
                  android:layout_marginRight="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginBottom="25dp"
                  android:layout_gravity="center_vertical|right"
                  android:maxLines="20"
                  android:scrollbars="vertical"
                  android:gravity="center"
                  android:id="@+id/question"
                  android:padding="10dp"
                  android:text="..."
                  android:background="@drawable/rounded_corners"/>
            <Button
                   android:background="?attr/selectableItemBackground"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/pointsButton"
                   android:layout_gravity="center_horizontal|bottom"
                   android:text="0 очков"
                   android:layout_margin="10dp"
                   style="@style/Widget.AppCompat.Button.Borderless.Colored"
                   android:ems="18" />
          </FrameLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:gravity="center">
              <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:id="@+id/variant1Layout"
                 android:foreground="?attr/selectableItemBackground"
                 android:clickable="true"
                 android:layout_centerInParent="true"
                 android:layout_centerHorizontal="true"
                 android:layout_marginBottom="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginStart="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginEnd="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                <Button
                    android:clickable="false"
                    android:background="@drawable/button_background"
                    android:textColor="@android:color/white"
                    android:text=""
                    android:id="@+id/variant1Button"
                    android:ems="18"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp" />
              </FrameLayout>
              <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/variant2Layout"
                     android:foreground="?attr/selectableItemBackground"
                     android:clickable="true"
                     android:layout_centerHorizontal="true"
                     android:layout_below="@+id/variant1Layout"
                     android:layout_marginBottom="10dp"
                     android:layout_marginLeft="10dp"
                     android:layout_marginStart="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                    <Button
                        android:clickable="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:id="@+id/variant2Button"
                        android:ems="18"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp" />
              </FrameLayout>
              <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/variant3Layout"
                     android:foreground="?attr/selectableItemBackground"
                     android:clickable="true"
                     android:layout_centerHorizontal="true"
                     android:layout_below="@+id/variant2Layout"
                     android:layout_marginBottom="10dp"
                     android:layout_marginLeft="10dp"
                     android:layout_marginStart="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                    <Button
                        android:clickable="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:id="@+id/variant3Button"
                        android:ems="18"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp" />
              </FrameLayout>
              <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:id="@+id/variant4Layout"
                     android:foreground="?attr/selectableItemBackground"
                     android:clickable="true"
                     android:layout_centerHorizontal="true"
                     android:layout_marginBottom="10dp"
                     android:layout_marginLeft="10dp"
                     android:layout_marginStart="10dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginEnd="10dp"
                     android:layout_below="@+id/variant3Layout"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                    <Button
                        android:clickable="false"
                        android:background="@drawable/button_background"
                        android:textColor="@android:color/white"
                        android:text=""
                        android:id="@+id/variant4Button"
                        android:ems="18"
                        android:layout_width="wrap_content"
                        android:layout_height="42dp" />
              </FrameLayout>
          </LinearLayout>
    </LinearLayout>
  <View
      android:id="@+id/inactiveView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/transparent"
      android:clickable="true"
      android:visibility="gone"/>
</RelativeLayout>