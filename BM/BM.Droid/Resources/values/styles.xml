<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bm_blue</item>
        <item name="colorPrimaryDark">@color/bm_dark_blue</item>
        <item name="colorAccent">@color/bm_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
        <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowTranslucentStatus">false</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>
  
    <style name="PointsDialog" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/PointsDialogAnimation</item>
    </style>

    <style name="PointsDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
        <!--<item name="android:windowEnterAnimation">@android:anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_top</item>-->
    </style>

</resources>